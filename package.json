{
  "name": "@clarchikjs/release-scripts",
  "version": "0.0.5",
  "description": "release scripts",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Clarchik/release-scripts"
  },
  "scripts": {
    "build": "tnode scripts/build.ts",
    "prettier": "pnpm prettier-ci --write",
    "prettier-ci": "prettier --cache --ignore-path=.gitignore --check '**/*.{ts,json,md,yml}'",
    "qa": "tsc && pnpm prettier-ci && pnpm build",
    "release": "tnode scripts/release.ts",
    "publish:main": "tnode scripts/publish.ts"
  },
  "dependencies": {
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "execa": "^9.6.0",
    "mri": "^1.2.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "publint": "^0.3.12",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@arnaud-barre/tnode": "^0.25.0",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.1.0",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.7.0",
    "conventional-changelog-cli": "^5.0.0",
    "esbuild": "^0.25.8",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  }
}
